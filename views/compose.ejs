<%- include("partials/header"); -%>

<h1>Compose</h1>


<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="titleContent">Title</label>
    <input class="form-control" type="text" id="titleContent" name="newTitleContent" placeholder="Type the new title here...">
    <label for="blogContent">Post</label>
    <textarea rows="5" class="form-control" type="text" id="blogContent" name="newBlogContent" placeholder="Type your new post here..."></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="newContentButton">Publish</button>
</form>



